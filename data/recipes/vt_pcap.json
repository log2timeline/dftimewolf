{
  "name": "vt_pcap",
  "description": "Fetches pcap for a specific hash.",
  "short_description": "Fetches pcap for a specific hash",
  "modules": [
    {
      "wants": [],
      "name": "VTCollector",
      "args": {
        "hashes": "@hashes",
        "vt_api_key": "@vt_api_key",
        "vt_type": "pcap"
      }
    },
    {
      "wants": ["VTCollector"],
      "name": "LocalFilesystemCopy",
      "args": {
        "target_directory": "@directory"
      }
    }
  ],
  "args": [
    ["hashes", "Comma-separated list of hashes to process", null],
    ["directory", "Directory in which to export files.", null],
    ["--vt_api_key", "Virustotal API key", "admin"]
  ]
}
