{
    "name": "gdrive_collect",
    "description": "Collect files from Google Drive.",
    "short_description": "Collect files from Google Drive.",
    "test_params": "--folder_id 1234567890 --output_directory /tmp/gdrive_collect",
    "modules": [
      {
        "wants": [],
        "name": "GoogleDriveCollector",
        "args": {
            "folder_id": "@folder_id",
            "recursive": "@recursive",
            "drive_ids": "@drive_ids",
            "output_directory": "@output_directory",
            "overwrite_existing": "@overwrite_existing",
            "max_download_workers": "@max_download_workers"
        }
      }
    ],
    "args": [
        ["--folder_id", "Parent Google drive folder ID to download from. Mutually exclusive with drive_ids.", null],
        ["--recursive", "Recursively collect from folder_id", false],
        [
            "--drive_ids",
            "Comma-separated list of drive IDs to download. Mutually exclusive with folder_id.",
            null
        ],
        [
            "--output_directory",
            "Output directory for collected files.",
            null
        ],
        [
            "--overwrite_existing",
            "Overwrite existing files.",
            false
        ],
        [
            "--max_download_workers",
            "Maximum number of worker threads to use for downloading files.",
            5
        ]
    ]
}
